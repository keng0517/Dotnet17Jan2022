@model AssignmentProjectDay16.Models.Product

@Html.ActionLink("Back to Home","Index","Product")

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

@using(Html.BeginForm("Create", "Product", FormMethod.Post)){

    <div class="form-group">
    @Html.LabelFor(m=>m.Id)
    @Html.EditorFor(m=>m.Id,new{@htmlAttributes=new{@class="form-control", @required=true, @placeholder="Enter your product id"}})
    </div>

    <div class="form-group">
    @Html.LabelFor(m=>m.Name)
    @Html.EditorFor(m=>m.Name,new{@htmlAttributes=new{@class="form-control", @required=true, @placeholder="Enter your product name"}})
    </div>

    <div class="form-group">
    @Html.LabelFor(m=>m.Price)
    @Html.EditorFor(m=>m.Price,new{@htmlAttributes=new{@class="form-control", @required=true, @placeholder="Enter your product price"}})
    </div>

    <div class="form-group">
    @Html.LabelFor(m=>m.SupplierId)
    @Html.EditorFor(m=>m.SupplierId,new{@htmlAttributes=new{@class="form-control", @required=true, @placeholder="Enter supplier ID of the product"}})
    </div>

    <div class="form-group">
    @Html.LabelFor(m=>m.Quantity)
    @Html.EditorFor(m=>m.Quantity,new{@htmlAttributes=new{@class="form-control", @required=true, @placeholder="Enter product quantity"}})
    </div>


    <div class="form-group">
    @Html.LabelFor(m=>m.Remarks)
    @Html.EditorFor(m=>m.Remarks,new{@htmlAttributes=new{@class="form-control", @placeholder="Enter your product remarks"}})
    </div>

    @*@Html.LabelFor(m=>m.IsVeg,htmlAttributes:new{@class="form-control"})
    @Html.CheckBoxFor(m=>m.IsVeg,new {@checked=Model.IsVeg})*@

     <input type="submit" value="Create Product" class="btn btn-success"/>
}
