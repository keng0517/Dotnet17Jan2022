@model IEnumerable<AssignmentProjectDay16.Models.Product>

    @*<a href="pizza/create">Add a Pizza</a>*@
    @Html.ActionLink("Add Product","Create","Product")
    <table class="table table-striped">
        <thead>
             <tr>
               <th>
                  Product Id
               </th>
               <th>
                  Name
               </th>
               <th>
                  Price
               </th>
               <th>
                  Supplier Id
               </th>
               <th>
                  Quantity
               </th>
               <th>
                  Remarks
               </th>
           </tr>
        </thead>
      <tbody>
           @foreach (var item in Model)
       {
           <tr>
               <td>
                   @item.Id
               </td>
               <td>
                   @item.Name
               </td>
               <td>
                   @item.Price
               </td>
               <td>
                   @item.SupplierId
               </td>
               <td>
                   @item.Quantity
               </td>
               <td>
                   @item.Remarks
               </td>
               <td>
                    @Html.ActionLink("Edit","Edit", @item) |
                    @Html.ActionLink("Details","Edit", @item) |
                    @Html.ActionLink("Delete","Delete", @item) |
               </td>

           </tr>
       }
      </tbody>
    </table>
